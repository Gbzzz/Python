import time #importando a biblioteca time para o uso apenas na opcção 3 do time.sleep

arquivo_adicionar_login = open('logins.txt', 'a') #abrindo os arquivos na qual irei armazenar os dados do LOGIN e SENHA
arquivo_adicionar_senha = open('senhas.txt', 'a') 

arquivo_leitura_login = open('logins.txt', 'r') #abrindo os arquivos onde os dados estão armazenados e lendo os dados 
arquivo_leitura_senha = open('senhas.txt', 'r')


id_usuario = 0

while True:
    print('\n-----Menu-----\n'+
    '\n1 - Login\n' +
    '2 - Cadastro\n'+
    '3 - Sair')
    opcao = int(input('\n>>> '))
    if opcao == 1:
        login_teste = input('\nDigite seu login: \n>>> ').lower()
        if login_teste == arquivo_leitura_login.readline():
            print('\nLogin feito com sucesso!\n')
        senha_teste = input('\nDigite sua senha: \n>>> ').lower()
        if senha_teste == arquivo_leitura_senha.readline():
            print('\nSenha correta, parabéns!\n')
        break
    if opcao == 2:
        login_usuario = input('\nDigite seu login:\n>>> ').lower() #utilizando a função lower, pra poder evitar problemas de letras maíusculas e minúsculas.
        senha_usuario = input('\nDigite sua senha:\n>>> ').lower()
        pular_linha = '\n'

        arquivo_adicionar_login.write(login_usuario)
        arquivo_adicionar_login.write(pular_linha) #pulando linha no arquivo txt, para salvar os logins um abaixo do outro
        arquivo_adicionar_senha.write(senha_usuario)
        arquivo_adicionar_senha.write(pular_linha) #pulando linha no arquivo txt, para salvar as senhas uma abaixo da outra

    if opcao == 3:
        print('Finalizando...')
        time.sleep(0.5) 
        break
